<% if (header=='header'){ %>
<%- include("partials/header"); -%>
<%}else {%>
<%- include("partials/headerdummy"); -%>
<%}%>
<section id="carousel" onclick="closeNav()" style="position:relative;z-index:0">
<div id="demo" class="carousel slide" data-ride="carousel">
<ul class="carousel-indicators">
<li data-target="#demo" data-slide-to="0" class="li-1"></li>
<li data-target="#demo" data-slide-to="1" class="active li-1"></li>
<li data-target="#demo" data-slide-to="2" class="li-1"></li>
</ul>
<div class="carousel-inner">
<div class="carousel-item active">
<img src="/images/carousel1.webp" alt="Sarees shopping" style="max-width:100%;height:auto;margin-right:auto;margin-left:auto;display:block">
</div>
<div class="carousel-item">
<img src="/images/carousel2.webp" alt="Lanhnga Shopping" style="max-width:100%;height:auto;margin-right:auto;margin-left:auto;display:block">
</div>
<div class="carousel-item">
<img src="/images/carousel3.webp" alt="Sarees" style="max-width:100%;height:auto;margin-right:auto;margin-left:auto;display:block">
</div>
</div>
<a class="carousel-control-prev" href="#demo" data-slide="prev">
<span class="carousel-control-prev-icon ccpi"></span>
</a>
<a class="carousel-control-next" href="#demo" data-slide="next">
<span class="carousel-control-next-icon ccpi"></span>
</a>
</div>
</section>
<section id="items">
<div class="row justify-content-center">
<% sarees.forEach(function(saree) { %>
<div class="col-6 col-md-4 pl-0 pr-0 d-flex align-items-stretch">
<div class="card" style="background-color:#faf4ff;height:26.5rem;border-radius:0%;">
<a href="/sarees/<%=saree._id%>"><img class="card-img-top" src="data:image/*;base64,<%=saree.img.data.toString('base64'); %> " alt="Saree image" style="width:100%"></a>
<div class="card-body mt-0 pt-0">
<a href="/sarees/<%=saree._id%>" class="pb-0" style="color:black;white-space: nowrap; font-size:20px;padding:0px;margin:0px;"><p class="pt-0 mt-0"><%=saree.productName%> </p></a>
<p class=" mt-n3" style="color:black;font-size:22px;font-weight:500;padding:0px;margin:0px;">&#x20b9;850<%=saree.prize%></p>
<p class=" mt-0" style="font-weight:200;white-space: nowrap;font-size:22px;padding:0px;margin:0px;"><%=saree.productDescription.substring(0,20)+"..." %></p>
 <a href="/userlike/<%=saree._id%>" style="color:#a83f39; font-size:20px; float:right">WishList <i class="fas fa-bookmark"></i></a>


</div>
</div>
</div>
<% }) %>
</div>
</section>
<%- include("partials/footer"); -%>
